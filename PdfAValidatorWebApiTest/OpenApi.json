          "featureReports": {
            "$ref": "#/components/schemas/FeatureReports"
          },
          "repairReports": {
            "$ref": "#/components/schemas/RepairReports"
          },
          "duration": {
            "$ref": "#/components/schemas/Duration"
          },
          "totalJobs": {
            "type": "string",
            "nullable": true
          },
          "failedToParse": {
            "type": "string",
            "nullable": true
          },
          "encrypted": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "BuildInformation": {
        "type": "object",
        "properties": {
          "releaseDetails": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ReleaseDetails"
            },
            "nullable": true,
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "Check": {
        "type": "object",
