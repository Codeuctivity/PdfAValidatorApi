            "readOnly": true
          },
          "passedRules": {
            "type": "integer",
            "format": "int32"
          },
          "failedRules": {
            "type": "integer",
            "format": "int32"
          },
          "passedChecks": {
            "type": "integer",
            "format": "int32"
          },
          "failedChecks": {
            "type": "integer",
            "format": "int32"
          }
